<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_redeem_item"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_redeem_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_corner_filled_bg_redeem"
            android:padding="4dp"
            android:text="Redeem"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_redeem_item"
            app:layout_constraintEnd_toEndOf="@id/iv_redeem_item" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_redeem_item">

            <TextView
                android:id="@+id/tv_redeem_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger x Fries"
                android:textColor="@color/color_text_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_redeem_item_points_required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingBottom="8dp"
                android:text="500 pts"
                android:textColor="@color/color_text_white"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</layout>
