<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/location_footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#323441">

            <ImageView
                android:id="@+id/iv_footer_indicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/up_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandable_footer_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout_arrow">

            <RelativeLayout
                android:id="@+id/expandable_child_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_location_footer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="The Lekkers Cafe"
                    android:textColor="@color/color_text_white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_location_footer_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:text="2km away"
                    android:textColor="@color/color_text_white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_location_footer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_footer_title"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="100dp"
                    android:text="A10, Jalan SS 15/8A, Subang Jaya, 47500, Petaling Jaya, Selangor, 47500"
                    android:textColor="@color/color_text_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_location_footer_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_location_footer_address"
                    android:text="Phone: +603-56333733"
                    android:textColor="@color/color_text_white"
                    android:textSize="14sp" />
            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>
</layout>
